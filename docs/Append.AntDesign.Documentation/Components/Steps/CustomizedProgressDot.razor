<Codebox Title="Customized Dot Style">
    <Description>
        <p>
            A simple step bar in the vertical direction.
        </p>
    </Description>
    <Demo>
        <Steps ProgressDot="@customDot" Current=1>
            <Step Title="Finished" Description="This is a description." />
            <Step Title="In Progress" Description="This is a description." />
            <Step Title="Waiting" Description="This is a description." />
        </Steps>
    </Demo>
</Codebox>
@code{
    RenderFragment customDot =  b =>
    {
        b.OpenComponent<Tooltip>(1);
        b.AddAttribute(2, "Title", "This is an custom dot");
        b.AddAttribute(3, "ChildContent", "Hello Ant design Blazor");
        b.CloseComponent();
    };
}
