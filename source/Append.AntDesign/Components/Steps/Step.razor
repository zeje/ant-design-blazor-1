@namespace Append.AntDesign.Components
@inherits AntComponent

<div class="@classes" style="@Style" >
    <div class="ant-steps-item-container" @attributes="@_containerAttributes" @onclick="@OnClick"  tabindex="@GetTabIndex()" >
        @if (!Last)
        {
            <div class="ant-steps-item-tail"></div>
        }
    <div class="ant-steps-item-icon">
        @if (!ShowProcessDot)
        {
            <span class="ant-steps-icon">
                @if (Icon == null)
                {
                    if (Status == StepsStatus.Finish)
                    {
                        <Icon Type=IconType.Outlined.Check></Icon>
                    }
                    else if (Status == StepsStatus.Error)
                    {
                        <Icon Type=IconType.Outlined.Close></Icon>
                    }
                    else if (Status == StepsStatus.Process || Status == StepsStatus.Wait)
                    {
                        @(Index+1)
                    }
                }
                else
                {
                    if (Status == StepsStatus.Error)
                    {
                        <Icon Type=IconType.Outlined.Close></Icon>
                    }
                    else
                    {
                        <Icon Type="@Icon"></Icon>
                    }

                }
            </span>

        }
        else
        {
            @if (ProgressDot != null)
            {
                @ProgressDot
            }
            else
            {
                <span class="ant-steps-icon">
                    <span class="ant-steps-icon-dot"></span>
                </span>
            }
        }
    </div>
        <div class="ant-steps-item-content">
            <div class="ant-steps-item-title">
                @Title
                @if (!string.IsNullOrEmpty(SubTitle))
                {
                    <div class="ant-steps-item-subtitle">@SubTitle</div>
                }
            </div>
            @if (!string.IsNullOrEmpty(Description))
            {
                <div class="ant-steps-item-description">@Description</div>
            }
        </div>
    </div>
</div>